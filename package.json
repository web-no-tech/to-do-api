  "main": "index.js",
  "scripts": {
    "dev:server": "ts-node-dev -r tsconfig-paths/register src/crosscutting/infra/http/server.ts",
    "migration:create": "cross-var ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:create src/crosscutting/infra/typeorm/migrations/$npm_config_name",
    "migration:run": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:run -d src/crosscutting/infra/typeorm/index.ts",
    "migration:revert": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:revert -d src/crosscutting/infra/typeorm/index.ts",
    "migration:generate": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:generate -d src/crosscutting/infra/typeorm/index.ts src/crosscutting/infra/typeorm/migrations/$npm_config_name",
    "build": "rm -rf ./dist && tsc -p tsconfig-build.json",
    "start": "node -r ts-node/register/transpile-only -r tsconfig-paths/register dist/crosscutting/infra/http/server.js"
  },
  "keywords": [],
